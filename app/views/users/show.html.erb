<div class="page-header">
<h1><%= @user.username %>'s Photo Gallery</h1>
</div>

<% provide(:title, @user.username) %>
  <div class="row">
    <aside class="col-md-4">
      <div class="user_stats">
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      </div>
    </aside>
    <div class="col-md-8">
   <%= render 'follow_form' if logged_in? %>
</div>
</div>



<div class="container text-center">
  <div class="row">
    <% @user_pictures.each do |picture| %>
    <div class="col-sm-4" sytle ="overflow: hidden;">
      <img src="<%=picture.image_url%>" class="thumbnail img-responsive danger"/>
      <p><%= link_to picture.title, picture_path(picture) %></p>
    </div>
    <% end %>
  </div>
</div>
